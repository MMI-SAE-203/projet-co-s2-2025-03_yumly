---
// Footer.astro
import { Image } from "astro:assets";
import IconInstagram from "../assets/icons/instagram_white.svg";
import IconTwitter from "../assets/icons/twitter_white.svg";
import IconLinkedin from "../assets/icons/linkedin_white.svg";
import IconBehance from "../assets/icons/behance_white.svg";
import IconFacebook from "../assets/icons/facebook_white.svg";

import IconConnexion from "../assets/icons/logo_connexion.svg";
import IconInscription from "../assets/icons/icon_inscription.svg";

import MascotteYumly from "../assets/icons/mascotte.svg";

---


<footer class="bg-[color:var(--color-orange-main)] text-[color:var(--color-grey-1)]">
    <!-- Version mobile -->
    <div class="block lg:hidden">
        <!-- Motif damier pour mobile -->
        <div 
            class="w-full h-24 bg-repeat-x bg-auto relative -top-17 lg:hidden"
            style="background-image: url('/assets/icons/deco_footer_mobile.svg')"
        ></div>

        <div class="px-6 py-6 flex flex-col space-y-8">
            <!-- En-tête -->
            <div>
                <a href="/" aria-label="Accueil" class="inline-block">
                <h2 class="text-3xl font-bold mb-1">yumly.</h2>
                </a>                
                <p class="mb-4">Le monde à votre table !</p>
            </div>

            <!-- Cuisine -->
            <div>
                <p class="font-medium mb-3">Découvrez la cuisine :</p>
                <div class="flex flex-wrap gap-2">
                    <a
                        href="/africaine"
                        class="bg-transparent border border-white rounded-full px-4 py-1 hover:bg-white hover:text-[color:var(--color-orange-main)]"
                        >Africaine</a
                    >
                    <a
                        href="/asiatique"
                        class="bg-transparent border border-white rounded-full px-4 py-1 hover:bg-white hover:text-[color:var(--color-orange-main)]"
                        >Asiatique</a
                    >
                    <a
                        href="/europeenne"
                        class="bg-transparent border border-white rounded-full px-4 py-1 hover:bg-white hover:text-[color:var(--color-orange-main)]"
                        >Européenne</a
                    >
                    <a
                        href="/latino"
                        class="bg-transparent border border-white rounded-full px-4 py-1 hover:bg-white hover:text-[color:var(--color-orange-main)]"
                        >Latino</a
                    >
                </div>
            </div>

            <!-- Découvrez aussi -->
            <div>
                <p class="font-medium mb-3">Découvrez aussi :</p>
                <div class="flex flex-wrap gap-2">
                    <a
                        href="/epiceries"
                        class="bg-transparent border border-white rounded-full px-4 py-1 hover:bg-white hover:text-[color:var(--color-orange-main)]"
                        >Épiceries</a
                    >
                    <a
                        href="/recettes"
                        class="bg-transparent border border-white rounded-full px-4 py-1 hover:bg-white hover:text-[color:var(--color-orange-main)]"
                        >Recettes</a
                    >
                </div>
            </div>

            <!-- Politique et contact -->
            <div class="flex flex-wrap gap-2 justify-start">
                <a
                    href="/politique"
                    class="bg-[color:var(--color-orange-shade-5)] text-[color:var(--color-orange-main)] rounded-full px-4 py-1"
                    >Politique de confidentialité</a
                >
                <a
                    href="/contact"
                    class="bg-[color:var(--color-orange-shade-5)] text-[color:var(--color-orange-main)] rounded-full px-4 py-1"
                    >Contact</a
                >
                <a
                    href="/faq"
                    class="bg-[color:var(--color-orange-shade-5)] text-[color:var(--color-orange-main)] rounded-full px-4 py-1"
                    >FAQ</a
                >
                <a
                    href="/mentions"
                    class="bg-[color:var(--color-orange-shade-5)] text-[color:var(--color-orange-main)] rounded-full px-4 py-1"
                    >Mentions légales</a
                >
            </div>

<div class="flex flex-col space-y-4 items-center">
    <a
        href="/connexion"
        class="flex items-center justify-center bg-transparent border border-white rounded-full px-6 py-2 hover:bg-white hover:text-[color:var(--color-orange-main)] mx-auto"
    >
        <Image
            src={IconConnexion}
            alt="Connexion"
            class="w-5 h-5 mr-2"
        />
        <span>Connexion</span>
    </a>
    <a
        href="/inscription"
        class="flex items-center justify-center bg-transparent border border-white rounded-full px-6 py-2 hover:bg-white hover:text-[color:var(--color-orange-main)] mx-auto"
    >
        <Image
            src={IconInscription}
            alt="Inscription"
            class="w-5 h-5 mr-2"
        />
        <span>Inscription</span>
    </a>
</div>

            <!-- Réseaux sociaux -->
            <div class="text-center">
                <p class="mb-4">Suivez-nous sur les réseaux !</p>
                <div class="flex justify-center gap-4">
                    <a
                        href="https://facebook.com"
                        aria-label="Facebook"
                        class="hover:opacity-75 transition-opacity"
                    >
                        <Image
                            src={IconFacebook}
                            alt="Facebook"
                            class="w-6 h-6"
                        />
                    </a>
                    <a
                        href="https://instagram.com"
                        aria-label="Instagram"
                        class="hover:opacity-75 transition-opacity"
                    >
                        <Image
                            src={IconInstagram}
                            alt="Instagram"
                            class="w-6 h-6"
                        />
                    </a>
                    <a
                        href="https://twitter.com"
                        aria-label="Twitter"
                        class="hover:opacity-75 transition-opacity"
                    >
                        <Image
                            src={IconTwitter}
                            alt="Twitter"
                            class="w-6 h-6"
                        />
                    </a>
                    <a
                        href="https://linkedin.com"
                        aria-label="LinkedIn"
                        class="hover:opacity-75 transition-opacity"
                    >
                        <Image
                            src={IconLinkedin}
                            alt="LinkedIn"
                            class="w-6 h-6"
                        />
                    </a>
                    <a
                        href="https://behance.com"
                        aria-label="Behance"
                        class="hover:opacity-75 transition-opacity"
                    >
                        <Image
                            src={IconBehance}
                            alt="Behance"
                            class="w-6 h-6"
                        />
                    </a>
                </div>
            </div>

            <!-- Copyright -->
            <div class="text-center text-sm">
                <p>Créé par Camille, Léo et Lison</p>
                <p>© 2025 Yumly. Tout droit réservé</p>
            </div>
        </div>
    </div>

    <!-- Version desktop -->
    <div class="hidden lg:block">
        <!-- Motif damier pour desktop -->
        <div 
            class="w-full h-24 bg-repeat-x bg-auto relative -top-20"
            style="background-image: url('/assets/icons/deco_footer_desktop.svg')"
        >
        </div>

        <!-- Première section -->
        <div class="max-w-7xl mx-auto px-8 py-10">
            <!-- Header section -->
            <div class="flex justify-between mb-10">
                <!-- Logo et slogan -->
                <div>
                    <a href="/" aria-label="Accueil" class="inline-block">
                    <h2 class="text-3xl font-bold mb-1">yumly.</h2>
                    </a>
                    <p>Le monde à votre table !</p>
                </div>

                <!-- Cuisine -->
                <div>
                    <p class="font-medium mb-3">Découvrez la cuisine :</p>
                    <div class="flex gap-3">
                        <a
                            href="/africaine"
                            class="bg-transparent border border-white rounded-full px-6 py-1 hover:bg-white hover:text-[color:var(--color-orange-main)]"
                            >Africaine</a
                        >
                        <a
                            href="/asiatique"
                            class="bg-transparent border border-white rounded-full px-6 py-1 hover:bg-white hover:text-[color:var(--color-orange-main)]"
                            >Asiatique</a
                        >
                        <a
                            href="/europeenne"
                            class="bg-transparent border border-white rounded-full px-6 py-1 hover:bg-white hover:text-[color:var(--color-orange-main)]"
                            >Européenne</a
                        >
                        <a
                            href="/latino"
                            class="bg-transparent border border-white rounded-full px-6 py-1 hover:bg-white hover:text-[color:var(--color-orange-main)]"
                            >Latino</a
                        >
                    </div>
                </div>

                <!-- Découvrez aussi -->
                <div>
                    <p class="font-medium mb-3">Découvrez aussi :</p>
                    <div class="flex gap-3">
                        <a
                            href="/epiceries"
                            class="bg-transparent border border-white rounded-full px-6 py-1 hover:bg-white hover:text-[color:var(--color-orange-main)]"
                            >Épiceries</a
                        >
                        <a
                            href="/recettes"
                            class="bg-transparent border border-white rounded-full px-6 py-1 hover:bg-white hover:text-[color:var(--color-orange-main)]"
                            >Recettes</a
                        >
                    </div>
                </div>
            </div>

            <!-- Politique et contact (en haut) -->
            <div class="flex gap-2 mb-8">
                <a
                    href="/politique"
                    class="bg-[color:var(--color-orange-shade-2)] text-white rounded-full px-4 py-1"
                    >Politique de confidentialité</a
                >
                <a
                    href="/faq"
                    class="bg-[color:var(--color-orange-shade-2)] text-white rounded-full px-4 py-1"
                    >FAQ</a
                >
                <a
                    href="/contact"
                    class="bg-[color:var(--color-orange-shade-2)] text-white rounded-full px-4 py-1"
                    >Contact</a
                >
                <a
                    href="/mentions"
                    class="bg-[color:var(--color-orange-shade-2)] text-white rounded-full px-4 py-1"
                    >Mentions légales</a
                >
            </div>
        </div>

        <!-- Section RESTONS EN CONTACT avec fond orange shade-1 -->
        <div class="bg-[color:var(--color-orange-shade-1)]">
            <div class="max-w-7xl mx-auto px-8 py-6">
                <div class="flex justify-between items-center">
                    <!-- Mascotte et texte -->
                    <div class="flex items-center">
                        <Image
                            src={MascotteYumly}
                            alt="Mascotte Yumly"
                            class="w-20 h-auto mr-4"
                        />
                        <h3 class="text-2xl font-bold">RESTONS EN CONTACT</h3>
                    </div>

                    <!-- Boutons connexion/inscription -->
                    <div class="flex gap-4">
                        <a
                            href="/inscription"
                            class="flex items-center justify-center bg-transparent border border-white rounded-full px-8 py-2 hover:bg-white hover:text-[color:var(--color-orange-main)]"
                        >
                            <Image
                                src={IconInscription}
                                alt="Inscription"
                                class="w-5 h-5 mr-2"
                            />
                            <span>Inscription</span>
                        </a>
                        <a
                            href="/connexion"
                            class="flex items-center justify-center bg-transparent border border-white rounded-full px-8 py-2 hover:bg-white hover:text-[color:var(--color-orange-main)]"
                        >
                            <Image
                                src={IconConnexion}
                                alt="Connexion"
                                class="w-5 h-5 mr-2"
                            />
                            <span>Connexion</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Section copyright et réseaux sociaux -->
            <div class="max-w-7xl mx-auto px-8 py-6">
                <div class="flex justify-between items-center">
                    <!-- Copyright -->
                    <div class="text-sm">
                        <p>Créé par Camille, Léo et Lison</p>
                        <p>© 2025 Yumly. Tout droit réservé</p>
                    </div>


                    <!-- Réseaux sociaux -->
                    <div class="text-right">
                        <p class="mb-3">Suivez-nous sur les réseaux !</p>
                        <div class="flex justify-end gap-4">
                            <a
                                href="https://facebook.com"
                                aria-label="Facebook"
                                class="hover:opacity-75 transition-opacity"
                            >
                                <Image
                                    src={IconFacebook}
                                    alt="Facebook"
                                    class="w-6 h-6 text-white"
                                />
                            </a>
                            <a
                                href="https://instagram.com"
                                aria-label="Instagram"
                                class="hover:opacity-75 transition-opacity"
                            >
                                <Image
                                    src={IconInstagram}
                                    alt="Instagram"
                                    class="w-6 h-6 text-white"
                                />
                            </a>
                            <a
                                href="https://twitter.com"
                                aria-label="Twitter"
                                class="hover:opacity-75 transition-opacity"
                            >
                                <Image
                                    src={IconTwitter}
                                    alt="Twitter"
                                    class="w-6 h-6"
                                />
                            </a>
                            <a
                                href="https://linkedin.com"
                                aria-label="LinkedIn"
                                class="hover:opacity-75 transition-opacity"
                            >
                                <Image
                                    src={IconLinkedin}
                                    alt="LinkedIn"
                                    class="w-6 h-6"
                                />
                            </a>
                            <a
                                href="https://behance.com"
                                aria-label="Behance"
                                class="hover:opacity-75 transition-opacity"
                            >
                                <Image
                                    src={IconBehance}
                                    alt="Behance"
                                    class="w-6 h-6"
                                />
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>