  { image: paprikaImg.src, alt: 'Paprika McCormick', name: 'Paprika McCormick' },
  { image: jerkyImg.src, alt: 'Kruga Biltong', name: 'Kruga Biltong' },
  { image: gloriaImg.src, alt: 'Gloria Cassis', name: 'Gloria Cassis' }
