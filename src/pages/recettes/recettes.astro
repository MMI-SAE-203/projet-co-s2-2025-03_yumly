---
import Layout from "../../layouts/Layout.astro";
import CardRecette from "../../components/CardRecette.astro";
import { getAllRecettes, getRecettesByContinent } from "/backend.mjs";

// Récupérer le continent depuis l'URL
const { continent } = Astro.url.searchParams;

// Liste des continents pour le filtre
const continents = ["Tous", "Asie", "Afrique", "Amérique latine", "Europe"];

// Récupération des recettes depuis PocketBase selon le filtre
const recettes = continent
    ? await getRecettesByContinent(continent)
    : await getAllRecettes();

// Fonction pour obtenir l'URL de l'image depuis PocketBase
function getImageUrl(recette) {
    if (!recette.photo_recette) return "/placeholder-recette.jpg";

    // Construire l'URL de l'image depuis PocketBase
    return `https://pb-yumly.leo-baudry.fr/api/files/Recette/${recette.id}/${recette.photo_recette}`;
}
---

<Layout title="Nos Recettes | Yumly">
    <main>
        <!-- H1 caché pour W3C -->
        <h1 class="sr-only">Nos Recettes - Yumly</h1>

        <!-- En-tête avec bannière -->
        <section>
            <img src="/src/assets/icons/hero.svg" alt="Hero Icon" />
            <div class="bg-[#2A8F25]">
                <h2>NOS RECETTES</h2>
                <p>
                    Yumly vous guide dans votre exploration culinaire mondiale
                    avec une sélection de recettes authentiques et d'accès aux
                    ingrédients essentiels pour les réaliser.
                </p>
                <p>
                    Des tacos mexicains aux pad thaï, en passant par les tajines
                    marocains, chaque recette est accompagnée d'informations sur
                    où trouver les ingrédients spécifiques qui font leur
                    authenticité.
                </p>
                <p>Découvrez, cuisinez, voyagez !</p>
            </div>

            <!-- Filtre par continent -->
            <div class="filter-container pt-2">
                <select id="continent-filter" class="continent-select">
                    <option value="">Choisir une catégorie</option>
                    {
                        continents.map((cont) => (
                            <option value={cont} selected={continent === cont}>
                                {cont}
                            </option>
                        ))
                    }
                </select>
            </div>

            <!-- Liste des recettes avec le composant CardRecette -->
            <section class="recettes-liste">
                {
                    recettes.map((recette, index) => (
                        <div
                            class="recette-item"
                            data-continent={recette.continent}
                        >
                            <CardRecette
                                id={recette.id}
                                nom={recette.nom_recette}
                                description={recette.description_recette}
                                image={getImageUrl(recette)}
                                continent={recette.continent}
                                index={index}
                            />
                        </div>
                    ))
                }
            </section>
        </section>
    </main>

    <style>
        main {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 1rem;
        }

        /* H1 caché pour W3C */
        .sr-only {
            position: absolute;
            width: 1px;
            height: 1px;
            padding: 0;
            margin: -1px;
            overflow: hidden;
            clip: rect(0, 0, 0, 0);
            white-space: nowrap;
            border: 0;
        }

        .bg-\[#2A8F25\] {
            background-color: #f16422;
            color: white;
            padding: 2rem;
            border-radius: 0.5rem;
            margin-bottom: 2rem;
            position: relative;
            overflow: hidden;
            text-align: center;
        }

        .hero-svg {
            width: 100px;
            height: 100px;
            margin: 0 auto 1rem auto;
            display: block;
        }

        .bg-\[#2A8F25\] h2 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            color: white;
            font-weight: bold;
            letter-spacing: 1px;
        }

        .bg-\[#2A8F25\] p {
            font-size: 1.1rem;
            line-height: 1.6;
            margin-bottom: 1rem;
            max-width: 800px;
            margin-left: auto;
            margin-right: auto;
        }

        .filter-container {
            display: flex;
            justify-content: center;
            margin-bottom: 2rem;
        }

        .continent-select {
            width: 100%;
            max-width: 300px;
            padding: 0.75rem 1.5rem;
            border: 1px solid #ccc;
            border-radius: 2rem;
            font-size: 1rem;
            outline: none;
            color: #777;
            background-color: white;
            cursor: pointer;
        }

        .recettes-liste {
            display: flex;
            flex-direction: column;
            gap: 3rem;
        }

        @media (max-width: 768px) {
            main {
                padding: 0.5rem;
            }

            .bg-\[#2A8F25\] {
                padding: 1.5rem;
            }

            .bg-\[#2A8F25\] h2 {
                font-size: 2rem;
            }

            .bg-\[#2A8F25\] p {
                font-size: 1rem;
            }

            .recettes-liste {
                gap: 2rem;
            }
        }
    </style>

    <script>
        // Filtrage des recettes par continent
        document.addEventListener("DOMContentLoaded", () => {
            const filter = document.getElementById("continent-filter");
            const recetteItems = document.querySelectorAll(".recette-item");

            filter.addEventListener("change", () => {
                const selectedContinent = filter.value;

                recetteItems.forEach((item) => {
                    const itemContinent = item.getAttribute("data-continent");

                    if (
                        selectedContinent === "" ||
                        selectedContinent === "Tous" ||
                        selectedContinent === itemContinent
                    ) {
                        item.style.display = "block";
                    } else {
                        item.style.display = "none";
                    }
                });
            });
        });
    </script>
</Layout>
