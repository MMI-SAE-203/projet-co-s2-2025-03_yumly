---
import '../styles/global.css';

const { description, image = "/screenshot.jpg" } = Astro.props;

const baseUrl = "https://www.example.com";
const pageUrl = `${baseUrl}${Astro.url.pathname}`;
const siteName = "Yumly";

import arrowLeft from '../assets/icons/arrow-left.svg?raw';

const title = Astro.url.pathname === "/" ? siteName : `${Astro.props.title} — ${siteName}`;
---

<!doctype html>
<html lang="fr">
  <head>
		<!-- Encodage & viewport -->
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

	  	<!-- SEO Meta -->
	 	 <title>{title}</title>
	  	<meta name="description" content={description}>
		<meta name="generator" content={Astro.generator}>
	  	<meta name="robots" content="index, follow">
  
		<!-- Open Graph -->
		<meta property="og:title" content={title}>
		<meta property="og:description" content={description}>
		<meta property="og:image" content={image}>
		<meta property="og:url" content={pageUrl}>
		<meta property="og:type" content="website">
		<meta property="og:locale" content="fr_FR">

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:title" content={title}>
		<meta name="twitter:description" content={description}>
		<meta name="twitter:image" content={image}>
		<meta name="twitter:site" content="@yourtwitterhandle">

		<!-- Preconnect -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href={pageUrl} crossorigin>
		<link rel="dns-prefetch" href={pageUrl}>

		<!-- Favicon -->
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
		<link rel="icon" href="/favicon/favicon.ico">

		<!-- Apple -->
		<link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">

		<!-- Android / PWA -->
		<link rel="manifest" href="/favicon/site.webmanifest">
		<link rel="icon" type="image/png" sizes="192x192" href="/favicon/android-chrome-192x192.png">
		<link rel="icon" type="image/png" sizes="512x512" href="/favicon/android-chrome-512x512.png">

    <meta name="generator" content={Astro.generator} />
    <script src="https://cdn.jsdelivr.net/npm/pocketbase@0.21.3/dist/pocketbase.umd.js"></script> 
	</head>
	
	<body>
<!-- Bouton retour -->
<div class="fixed top-12 left-4 z-50">
  <button 
    onclick="history.back()" 
    class="flex items-center justify-center w-10 h-10"
    aria-label="Retour à la page précédente"
  >
    <div 
      class="w-6 h-6 text-white transition-colors duration-200" 
      set:html={arrowLeft} 
    />
  </button>
</div>


		<main class="min-h-screen">
		  <slot/>
		</main>
	</body>
</html>